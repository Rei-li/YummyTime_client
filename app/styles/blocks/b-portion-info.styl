.b-portion-info
  color $c-light

  &:not(:last-child)
    margin-bottom: 20px;

  &__row
    display flex
    justify-content space-between
    align-items center
    font-size 0
    color $bg-light


  &__text,
  &__person
    font-size $h4-font-size
    margin-right 12px

  &__cost
    font-size $h2-font-size
    text-align right

  &__remove-btn
    width 45px
    height 45px
    position relative
    padding 0
    margin-right 8px

    &:before
      transform rotate(45deg)
    &:after
      transform rotate(-45deg)
    &:before
    &:after
      position absolute
      content ''
      display block
      left 0
      top 0
      bottom 0
      right 0
      width 28px
      height 2px
      background $orange
      margin auto
      transform-origin center

    &._disabled
      &:before
      &:after
        background $grD
        cursor not-allowed
