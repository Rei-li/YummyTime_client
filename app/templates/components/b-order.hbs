<div class="b-order">
  <h1 class="b-order__title">Информация о заказе</h1>

  {{b-order-description order=order}}

  <ul class="b-order__content">
    {{#each order.portions as |portion|}}
      {{b-order-group order=order portion=portion owner=group.grouper}}
    {{/each}}
  </ul>

 {{#if isManager}}
  <div class="b-order__actions">
    <button {{action "toggleActiveState"}} class="button _submit">
      {{#if order.active}}Заблокировать заказ{{else}}Разблокировать заказ{{/if}}
    </button>
    {{#link-to 'checkout' order.id class="button _submit"}}
      Уведомить пользователей
    {{/link-to}}
  </div>
  {{/if}}
</div>

{{!-- {{#link-to "new-portion-order" order.id aria-label="add new portion" class="btn-new-order"}}{{/link-to}} --}}
 {{#if canAddPortion}}
 <button {{action "add"}} class="btn-new-order">+</button>
 {{/if}}
